{
  "id": "info.matjaz.candy",
  "name": {
    "en": "Candy"
  },
  "description": {
    "en": "Homey productivity boost",
    "nl": "Homey productiviteitsboost"
  },
  "version": "0.7.4",
  "compatibility": "1.2.x",
  "category": [
    "tools"
  ],
  "author": {
    "name": "Matjaž Lipuš",
    "email": "matjazl@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Matjaž Lipuš",
        "website": "http://matjaz.info",
        "email": "matjazl@gmail.com"
      },{
        "name": "Erik van Dongen",
        "website":"http://github.com/irritanterik/",
        "email": "gdvandongen+github@gmail.com"
      }
    ]
  },
  "images": {
    "large": "assets/images/large.jpg",
    "small": "assets/images/small.jpg"
  },
  "flow": {
    "triggers": [{
      "id": "systemInitiated",
      "title": {
        "en": "Homey initiated",
        "nl": "Homey gestart"
      }
    },{
      "id": "systemNewFirmware",
      "title": {
        "en": "New Homey firmware",
        "nl": "Nieuwe Homey firmware"
      },
      "tokens": [{
        "name":"currentVersion",
        "title":{
          "en":"current",
          "nl":"huidige"
        },
        "example":{
          "en":"0.10.7"
        }
      },{
        "name":"newVersion",
        "title":{
          "en":"new",
          "nl":"nieuwe"
        },
        "example":{
          "en":"1.0.0"
        }
      }]
    }, {
      "id": "appCrashed",
      "title": {
        "en": "App crashed"
      },
      "tokens": [
        {
          "name": "id",
          "title": {
            "en": "ID",
            "nl": "ID"
          }
        },
        {
          "name": "message",
          "title": {
            "en": "Message",
            "nl": "Bericht"
          }
        }
      ]
    }],
    "conditions": [{
      "id": "systemCloudConnected",
      "title": {
        "en": "!{{Connected|No connection}} to cloud",
        "nl": "!{{Verbinding|Geen verbinding}} met cloud"
      }
    },{
      "id": "systemDeviceLastUpdate",
      "title": {
        "en": "Value !{{|not}} updated in last",
        "nl": "Waarde !{{|niet}} bijgewerkt in laatste"
      },
      "args": [
        {
          "name": "deviceCapability",
          "type": "autocomplete",
          "placeholder": {
            "en": "sensor",
            "nl": "sensor"
          }
        },{
          "name": "timeout",
          "type": "number",
          "placeholder": {
            "en": "5"
          }
        },{
          "name": "units",
          "type": "autocomplete",
          "placeholder": {
            "en": "Units...",
            "nl": "Eenheid..."
          }
        }
      ]
    },{
      "id": "systemFlowTimeout",
      "title": {
        "en": "Flow !{{not|}} run in last",
        "nl": "Flow !{{niet|}} uitgevoerd laatste"
      },
      "args": [
        {
          "name": "timeout",
          "type": "number",
          "placeholder": {
            "en": "5"
          }
        },{
          "name": "units",
          "type": "autocomplete",
          "placeholder": {
            "en": "Units...",
            "nl": "Eenheid..."
          }
        }
      ]
    },{
      "id": "systemNewFirmware",
      "title": {
        "en": "!{{New|No new}} firmware",
        "nl": "!{{Nieuwe|Geen nieuwe}} firmware"
      }
    }],
    "actions": [{
      "id": "enableFolderFlows",
      "title": {
        "en": "Enable all folder flows",
        "nl": "Activeer flows in een map"
      },
      "args": [
        {
          "name": "folder",
          "type": "autocomplete",
          "placeholder": {
            "en": "Folder name...",
            "nl": "Naam map..."
          }
        },
        {
          "name": "which",
          "type": "dropdown",
          "values": [
            {
              "id": "current",
              "label": {
                "en": "Current folder only",
                "nl": "Alleen deze map"
              }
            },
            {
              "id": "all",
              "label": {
                "en": "Current and descendant folders",
                "nl": "Deze en onderliggende mappen"
              }
            }
          ]
        }
      ]
    }, {
      "id": "disableFolderFlows",
      "title": {
        "en": "Disable all folder flows",
        "nl": "Deactiveren flows in een map"
      },
      "args": [
        {
          "name": "folder",
          "type": "autocomplete",
          "placeholder": {
            "en": "Folder name...",
            "nl": "Naam map..."
          }
        },
        {
          "name": "which",
          "type": "dropdown",
          "values": [
            {
              "id": "current",
              "label": {
                "en": "Current folder only",
                "nl": "Alleen deze map"
              }
            },
            {
              "id": "all",
              "label": {
                "en": "Current and descendant folders",
                "nl": "Deze en onderliggende mappen"
              }
            }
          ]
        }
      ]
    }, {
      "id": "reboot",
      "title": {
        "en": "Reboot Homey",
        "nl": "Reboot Homey"
      }
    }, {
      "id": "restart_app",
      "title": {
        "en": "Restart app"
      },
      "args": [
        {
          "name": "app",
          "type": "autocomplete",
          "placeholder": {
            "en": "App name...",
            "nl": "Naam app..."
          }
        }
      ]
    }, {
      "id": "notification",
      "title": {
        "en": "Add notification",
        "nl": "Stuur notificatie"
      },
      "args": [
        {
          "name": "noti",
          "type": "text",
          "placeholder": { "en": "Notification!","nl": "Notificatie!" }
        }
      ]
    }, {
      "id": "restart_mcu",
      "title": {
        "en": "Restart Microcontroller"
      }
    }]
  }
}
